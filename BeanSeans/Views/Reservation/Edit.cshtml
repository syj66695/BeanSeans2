@model BeanSeans.Data.Reservation

@{
    ViewData["Title"] = "Edit";
}

<h1 class="display-4">Edit Reservation</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="SourceId" />
            <input type="hidden" asp-for="StatusId" />
            <input type="hidden" asp-for="PersonId" />
            <input type="hidden" asp-for="SittingId" />
            <div class="form-group">
                <label asp-for="Guest" class="control-label"></label>
                <input asp-for="Guest" class="form-control" />
                <span asp-validation-for="Guest" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

